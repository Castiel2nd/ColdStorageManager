<UserControl x:Class="ColdStorageManager.Controls.RegControlColumnCreator"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ColdStorageManager.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid MinWidth="200">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
			<ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
		<ComboBox Name="ColTypeCmbx">
            <ComboBoxItem Content="TEXT"></ComboBoxItem>
            <ComboBoxItem Content="INTEGER"></ComboBoxItem>
		</ComboBox>
        <TextBox Name="ColNameTxtBox" Grid.Column="1"></TextBox>
    </Grid>
</UserControl>
